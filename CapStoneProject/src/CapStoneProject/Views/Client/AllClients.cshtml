@model IEnumerable<Client>

@{
    Layout = "_Layout2";
}



<div class="">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10 Afilter" id="">
            <h2>Filtered Clients</h2>
            <table class="table table-striped table-bordered table-condensed">
                <tr><th>First Name</th><th>Last Name</th><th>Company Name</th><th>Street</th><th>City</th><th>State</th><th>ZipCode</th><th>Phone Number</th><th>Email</th><th class="text-right">Actions</th><th>Delete</th></tr>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="3" class="text-center">No Clients</td></tr>
                }
                else
                {
                    foreach (Client c in Model)
                    {
                        <tr>
                            <td>@c.FirstName</td>
                            <td>@c.LastName</td>
                            <td>@c.CompanyName</td>
                            <td>@c.Street</td>
                            <td>@c.City</td>
                            <td>@c.State</td>
                            <td>@c.Zipcode</td>
                            <td>@c.PhoneNumber</td>
                            <td>@c.Email</td>
                            <td >
                                <form asp-action="ModalAction" asp-route-id=@c.ClientID asp-controller="Client" method="get">
                                    <div class="btn-toolbar">
                                        <a class="btn btn-sm btn-warning pull-right" asp-controller="Client" asp-action="Edit"
                                           asp-route-id=@c.ClientID>Edit</a>
                                        <a asp-action="ModalAction" asp-controller="Client"
                                           asp-route-id=@c.ClientID data-target="#modal-container" data-toggle="modal" class="btn btn-sm btn-primary pull-right">Upload</a>

                                        <input type="hidden" name="ClientID" value="@c.ClientID" />
                                        </div>

                                    </form>

                            </td>
                            <td>
                                <form asp-action="Delete" asp-controller="Client" asp-route-id=@c.ClientID method="post">

                                    <input type="hidden" name="ClientID" value="@c.ClientID" />
                                    <button type="submit"
                                            class="btn btn-sm btn-danger">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </table>

        </div>
        <div class="col-lg-1"></div>
    </div>
</div>



