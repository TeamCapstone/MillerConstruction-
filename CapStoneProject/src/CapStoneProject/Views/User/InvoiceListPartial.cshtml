<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <a data-toggle="collapse" href="#collapse3" id="parTitle">Invoices</a>
                    </h3>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    @if (Model.ClientID == null)
                    {
                        @await Component.InvokeAsync("UserInvoice", 0)
                    }
                    else
                    {
                        @await Component.InvokeAsync("UserInvoice", new { id = Model.ClientID })
                    }
                    

                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>
