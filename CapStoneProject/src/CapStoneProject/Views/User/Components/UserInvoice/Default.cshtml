@model List<Invoice>
<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <div class="container" id="formDiv">
            @if (Model.Count == 0 || Model == null)
            {
                <p id="UserErrorMessage">You have no invoices.</p>
            }
            else
            {
                <br />
               
                <table class="table table-striped table-bordered table-condensed " style="width:50%;">
                    <tr>
                        <th>Invoice Date</th>
                        <th class="text-right">Download</th>
                    </tr>
                    @foreach (Invoice i in Model)
                    {

                    <tr>
                        <td>
                            @i.Date.ToString("MMMM dd, yyyy")
                        </td>
                        <td>
                            <a asp-action="Download" asp-controller="Invoice" asp-route-fname=@i.InvoiceFilename class="btn btn-sm btn-primary pull-right"><span class="glyphicon glyphicon-download-alt pull-right" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                    }
                </table>
            }
</div>
    </div>
    <div class="col-lg-4"></div>
</div>


