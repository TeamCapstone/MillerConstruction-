@model List<Project>

<div class="container" id="formDiv">
    <div class="row">
        <br />
        <table class="table table-striped table-bordered table-condensed">
            <tr>           
                <th>Project Name</th>
                <th>Status</th>
                <th>Date</th>
                <th class="text-right">Action</th>
            </tr>
            @if (Model.Count == 0)
            {
                
               <caption id="UserErrorMessage" >You have no status updates at this time.</caption>

            }
            else
            {
                @foreach (Project p in Model)
                {
                <tr>
                    <td>@p.ProjectName</td>
                    <td>@p.ProjectStatus</td>
                    <td>@p.StatusDate</td>
                    <td ><span type="span" class="btn btn-sm btn-primary pull-right"><i class="fa fa-plus-circle" aria-hidden="true"></i>
                        @Html.ActionLink("Add a Review", "MakeReview", "Review", null, new { @style = "color:black; text-algin: center; padding-left:3px;" })
                        </span></td>
                </tr>
                
                }
            }
        </table>
    </div>
</div>

