@model List<Project>

<div class="container" id="formDiv">
    <div class="row">
        <br />
        <table class="table table-striped table-bordered table-condensed">
            <tr>           
                <th>Project Name</th>
                <th>Status</th>
                <th>Date</th>
                <th class="text-right">Action</th>
            </tr>
            @if (Model.Count == 0)
            {
                
               <caption id="UserErrorMessage" >You have no status updates at this time.</caption>

            }
            else
            {
                @foreach (Project p in Model)
                {
                <tr>
                    <td>@p.ProjectName</td>
                    <td>@p.ProjectStatus</td>
                    <td>@p.StatusDate</td>
                    <td >
                        <a asp-action="MakeReview" asp-controller="Review" class="btn btn-sm btn-primary pull-right" asp-route-projectId="@p.ProjectID">Review Project</a>
                    </td>
                </tr>
                
                }
            }
        </table>
    </div>
</div>

