@model Client

<div class="container-fluid" id="formDiv">


    <h2 id="infoUpdateTitle">Update Information</h2>
   
        <div asp-validation-summary="All" class="text-danger"></div>

        <form asp-action="EditClient" method="post" id="userUpdateFrm">     
            <input type="hidden" asp-for="ClientID" class="form-control" />
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-6">
                        <label asp-for="CompanyName">Company Name:</label>
                        <input class="form-control" type="text" asp-for="CompanyName"  id="compName">
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6"></div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-6">
                        <label asp-for="FirstName">First Name:</label>
                        <input asp-for="FirstName" class="form-control" type="text" id="firstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>


                    <div class="col-lg-6">
                        <label asp-for="LastName">Last Name:</label>
                        <input asp-for="LastName" class="form-control" type="text"  id="lastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-6">
                        <label asp-for="Street">Street Name:</label>
                        <input asp-for="Street" class="form-control" type="text"  id="stLBL" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>


                    <div class="col-lg-6">
                        <label asp-for="City">City:</label>
                        <input asp-for="City" class="form-control" type="text"  id="cityLbl" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-lg-6">
                        <label asp-for="State">State:</label>
                        <input asp-for="State" class="form-control" type="text"  id="stLbl" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6">
                        <label asp-for="Zipcode">ZipCode:</label>
                        <input asp-for="Zipcode" class="form-control" type="text"  id="zipLbl" />
                        <span asp-validation-for="Zipcode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-lg-6">
                        <label asp-for="PhoneNumber">Phone Number:</label>
                        <input asp-for="PhoneNumber" class="form-control" type="text"  id="phoneLbl" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control" type="text"  id="emailLbl" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row"><div class="col-lg-12"><br /></div></div>
            <div class="row">
                
                <div class="form-group text-center">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-controller="User" asp-action="UserPage" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>


