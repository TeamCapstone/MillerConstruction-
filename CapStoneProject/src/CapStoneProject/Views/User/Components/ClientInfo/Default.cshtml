@model Client

<div class="container" id="formDiv">


    <h2 id="BRtitle">Update Information</h2>
    @*<div class="bg-primary panel-body"><h4>Update Information</h4></div>*@

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="EditClient" method="post" id="interiorDiv">
        <div class="form-group">
            <label hidden asp-for="ClientID"></label>
            <input type="hidden" asp-for="ClientID" class="form-control" />
        </div>
        <p>
            <label asp-for="CompanyName"></label>
            <input asp-for="CompanyName" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </p>
        <p>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </p>    
        <p>
            <label asp-for="Street"></label>
            <input asp-for="Street" />
            <span asp-validation-for="Street" class="text-danger"></span>

            <label asp-for="City"></label>
            <input asp-for="City" />
            <span asp-validation-for="City" class="text-danger"></span>

            <label asp-for="State"></label>
            <input asp-for="State" />
            <span asp-validation-for="State" class="text-danger"></span>

            <label asp-for="Zipcode"></label>
            <input asp-for="Zipcode" />
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </p>
        <p>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </p>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="User" asp-action="UserPage" class="btn btn-default">Cancel</a>
    </form>

</div>

