@model VMDeleteProject
@{
    ViewBag.Title = "Delete Project";
    Layout = "_Layout2";
}

<div id="successDiv">
    <div class="col-lg-3"></div>
    <div class="col-lg-6" id="messageDiv">
        <h1 >Delete Project:</h1>
        <h3>Are you sure you wish to delete this project?</h3>
        <form asp-controller="Project" asp-action="DeleteProject" method="post">
            <input asp-for="ProjectID" type="hidden" />

            <div class="col-lg-12"><br /></div>
            <div class="row">
                <div class="form-group text-center">
                    <div class="col-lg-12">   
                        <input class="btn btn-sm btn-danger" type="submit" value="Delete" />   
                        <a asp-action="AdminPage" asp-controller="Admin" class="btn btn-sm btn-primary">Cancel</a>
                                              
                    </div>
                </div>
            </div>

        </form>
    </div>
    <div class="col-lg-3"></div>
</div>
