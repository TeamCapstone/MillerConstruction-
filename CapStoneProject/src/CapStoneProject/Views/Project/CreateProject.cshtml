@model VMCreateProject
@{ 
    ViewBag.Title = "Create Project";
}

<h1 class="text-center">Create New Project:</h1>
<form asp-controller="Project" asp-action="CreateProject" method="post">
    <input asp-for="BidID" type="hidden" />
    <input asp-for="ClientID" type="hidden" />
    <input asp-for="ProjectID" type="hidden" />
    <div class="form-group">
        <h3>Client E-mail</h3>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" type="email" /><br />
    </div>
    <div class="form-group">
        <h3>Client E-mail</h3>
        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
        <input asp-for="LastName" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Project Name</h3>
        <div><span asp-validation-for="ProjectName" class="text-danger"></span></div>
        <input asp-for="ProjectName" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Estimated Cost</h3>
        <div><span asp-validation-for="Estimate" class="text-danger"></span></div>
        <input asp-for="Estimate" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Start Date</h3>
        <div><span asp-validation-for="StartDate" class="text-danger"></span></div>
        <input asp-for="StartDate" class="form-control" type="date" /><br />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Post" />
    </div>
</form>
