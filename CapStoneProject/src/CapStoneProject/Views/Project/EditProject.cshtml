@model VMEditProject
@{
    ViewBag.Title = "Edit Project";
}

<h1 class="text-center">Edit Project:</h1>
<form asp-controller="Project" asp-action="EditProject" method="post">
    <input asp-for="ProjectID" type="hidden" />
    <div class="form-group">
        <h3>Project Name</h3>
        <div><span asp-validation-for="ProjectName" class="text-danger"></span></div>
        <input asp-for="ProjectName" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Client E-mail</h3>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Client Last Name</h3>
        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
        <input asp-for="LastName" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Client First Name</h3>
        <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
        <input asp-for="FirstName" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Original Estimate</h3>
        <div><span asp-validation-for="OriginalEstimate" class="text-danger"></span></div>
        <input asp-for="OriginalEstimate" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Additional Costs</h3>
        <div><span asp-validation-for="AdditionalCost" class="text-danger"></span></div>
        <input asp-for="AdditionalCost" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Current Total</h3>
        <div><span asp-validation-for="CurrentTotal" class="text-danger"></span></div>
        <input asp-for="CurrentTotal" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Start Date</h3>
        <div><span asp-validation-for="StartDate" class="text-danger"></span></div>
        <input asp-for="StartDate" class="form-control" /><br />
    </div>
    <div class="form-group">
        <h3>Status</h3>
        <div><span asp-validation-for="Status" class="text-danger"></span></div>
        <input asp-for="Status" class="form-control" /><br />
    </div>
    <div class="text-center">
        <a asp-action="AdminPage" asp-controller="Admin" class="btn btn-sm btn-primary">Cancel</a>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Post" />
    </div>
</form>
