
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />

    <link runat="server" rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="~/images/favicon.ico" type="image/ico" />

    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/customCss.css" rel="stylesheet" />

</head>
<body>

    <div class="navbar-wrapper">
        <nav class="navbar navbar-toggleable-md " id="navDiv" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <div id="brandDiv">
                        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                            <img src="~/images/Logo2.jpg" alt="logo" id="logoImg">
                        </a>
                    </div>
                    <button type="button" class="navbar-toggle collapsed " style="margin-bottom: -100px;margin-top: -90px;" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-hidden="true" aria-expanded="false">
                        <span class="glyphicon glyphicon-th" style="font-size:50px;color:red;  "></span>
                    </button>

                </div>
                <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1" aria-expanded="false" style="height: 1px;">
                    <ul class="nav navbar-nav navbar-right mr-auto" id="navUL">
                        @if (User.Identity.Name == null)
                        {
                            <li class="nav-item"><a asp-action="BRLogin" asp-controller="Account">Request a Quote</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a asp-action="LoggedInBidRequest" asp-controller="BidRequest">Request a Quote</a></li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Details
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li class="nav-item"><a class="dropdown-item" asp-action="About" asp-controller="About" id="innerNavLI1">About</a></li>

                                <li class="nav-item"><a class="dropdown-item" asp-action="Services" asp-controller="Services" id="innerNavLI3">Services</a></li>
                                <li class="nav-item"><a class="dropdown-item" asp-action="FAQ" asp-controller="FAQ" id="innerNavLI1">FAQ</a></li>
                                <li class="nav-item"><a class="dropdown-item" asp-action="AllApprovedReviews" asp-controller="Review" id="innerNavLI2">Reviews</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a asp-action="Index" asp-controller="Gallery">Gallery</a></li>




                        @if (User.Identity.Name == null)
                        {
                            <li class="nav-item"><a class="welcome" asp-action="Login" asp-controller="Account">Login</a></li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Account
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                                    @if (User.Identity.Name != "Admin")
                                    {
                                        <li class="nav-item">
                                            <a class="dropdown-item welcome" asp-action="UserPage" asp-controller="User" id="innerNavLI4">User Portal</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="dropdown-item welcome" asp-action="AdminPage" asp-controller="Admin" id="innerNavLI4">Admin Portal</a>
                                        </li>

                                    }
                                    <li class="nav-item"><a class="dropdown-item" asp-action="Logout" asp-controller="Account" id="innerNavLI5">Logout</a></li>
                                </ul>



                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </div>

    <div>
        @RenderBody()
    </div>

    <footer class="footer container-fluid text-center" id="footDiv">
        <div class="container">
            <div class="row">
                <h3 class="text-center MCCTitle">Miller Custom Construction Inc.</h3>
            </div>
            <div class="row">

                <div class="col-md-4">
                   
                    <p>
                        <h3 class="welcome">Serving</h3>
                        Canby, OR and
                        <br /> surrounding areas.
                    </p>
                </div>

                <div class="col-md-4">   
               
                    <ul class="list-inline ">

                        <li class="socFtr">
                            <a href="https://www.facebook.com/millerccinc/" class="btn-social btn-outline socFtr"><span class="sr-only">Facebook</span><i class="fa fa-facebook-square"></i></a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4" id="rtFtDiv">
                  
                    @if (User.Identity.Name == null)
                    {
                        <h3><a asp-action="Login" asp-controller="Account" class="welcome">Login</a></h3>
                    }
                    else
                    {
                        @if (User.Identity.Name != "Admin")
                        {
                            <a asp-action="UserPage" asp-controller="User" class="welcome">User Portal</a>
                        }
                        else
                        {
                            <a asp-action="AdminPage" asp-controller="Admin" class="welcome">Welcome @User.Identity.Name</a>

                        }
                    }
                    <p>Thank you for visiting.</p>
                </div>

            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row" id="footBelow">
                    <div class="col-lg-12">
                        Copyright © Team CapstoneJOCA 2017
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
