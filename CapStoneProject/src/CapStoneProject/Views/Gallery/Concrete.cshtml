
@{
    ViewData["Title"] = "Concrete Gallery";
    Layout = "_Layout2";
}

<div id="mccCara" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#mccCara" data-slide-to="0" class="active"></li>
        <li data-target="#mccCara" data-slide-to="1"></li>
        <li data-target="#mccCara" data-slide-to="2"></li>
        <li data-target="#mccCara" data-slide-to="3"></li>
        <li data-target="#mccCara" data-slide-to="4"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="galCaroImg" src="~/images/concrete/concreteSteps.jpg" />
        </div>

        <div class="item">
            <img class="galCaroImg" src="~/images/concrete/copperCon2.jpg" />
        </div>

        <div class="item">
            <img class="galCaroImg" src="~/images/leafConcrete.jpg" />
        </div>

        <div class="item">
            <img class="galCaroImg" src="~/images/copperCon.jpg" />
        </div>

        <div class="item">
            <img class="galCaroImg" src="~/images/concrete/stampedconcreete.jpg" />
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#mccCara" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#mccCara" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<script>
  $('.carousel').carousel({
   interval: 6000
  });
</script>  