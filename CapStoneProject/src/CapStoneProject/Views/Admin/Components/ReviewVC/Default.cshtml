@* Review default panel *@
@model IEnumerable<Review>


<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <a data-toggle="collapse" href="#collapse4" id="parTitle">All Reviews</a>
                    </h3>
                </div>
                <div id="collapse4" class="panel-collapse collapse">
                    @* Start Content *@

                    <div class="container" id="formDiv">
                        <div class="row">
                            <br />

                            <form asp-controller="Admin" asp-action="ReviewPanel" class="pull-right">
                                <p>
                                    <input type="text" name="SearchString">
                                    <input type="submit" value="Filter" />
                                </p>
                            </form>

                            <br />
                            <table class="table table-striped table-bordered table-condensed">
                                <tr class="info">
                                    <th class="text-center">ReviewID</th>
                                    <th class="text-center">Review Name</th>
                                    <th class="text-center">Subject</th>
                                    <th class="text-center">Body</th>
                                    <th class="text-center">Approved?</th>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                                @foreach (var review in Model)
                                {
                                    <tr class="danger">
                                        <td class="table-danger">@review.ReviewID</td>
                                        <td class="text-left">@review.From.FirstName</td>
                                        <td class="table-danger">@review.Subject</td>
                                        <td class="text-left">@review.Body</td>
                                        <td class="table-danger">@review.Approved</td>
                                        @if (review.Date == null)
                                        {
                                            review.Date = DateTime.Now;
                                            <td class="text-left">@review.Date.ToString("d")</td>
                                        }
                                        else
                                        {

                                            <td class="text-left">@review.Date.ToString("d")</td>
                                        }
                                        <td class="text-center">

                                            <form asp-action="DeleteReview" method="post">
                                                <div class="btn-toolbar">
                                                    <a asp-action="EditReview" asp-controller="Admin" class="btn btn-sm btn-warning"
                                                       asp-route-ReviewID="@review.ReviewID">
                                                        Edit
                                                    </a>
                                                    <input type="hidden" name="ReviewID" value="@review.ReviewID" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        Delete
                                                    </button>
                                                    <span class="btn btn-sm btn-success">
                                                        @Html.ActionLink("Comment", "Comment", "Review",
                                                                new { subject = @review.Subject, Id = @review.ReviewID, body = @review.Body }, new { @style = "color:aliceblue;" })
                                                    </span>
                                                </div>

                                            </form>
                                        </td>
                                    </tr>
                                }
                            </table>


                        </div>
                    </div>

                    @* End Content *@
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-1"></div>
</div>
