@* project default panel *@
@model IEnumerable<Project>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <a data-toggle="collapse" href="#collapse5" id="parTitle">Project List</a>
                    </h3>
                </div>
                        <div id="collapse5" class="panel-collapse collapse">
                            <div class="container" id="formDiv">
                                <div class="row">
                                    @* Start Content *@
                                    <br />
                          
                                    <table class="table table-striped table-bordered table-condensed">
                                        <thead class="table-bordered">
                                            <tr>
                                                <th>Project Name</th>
                                                <th>Client</th>
                                                <th>Start Date</th>
                                                <th>Status</th>
                                                <th>Last Updated</th>
                                                <th class="text-right">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var p in Model)
            {
                                                <tr>
                                                    <td>@p.ProjectName</td>
                                                    <td>@(p.Client.LastName + ", " + p.Client.FirstName) </td>
                                                    <td>@p.StartDate</td>
                                                    <td>@p.ProjectStatus</td>
                                                    <td>@p.StatusDate</td>
                                                    <td><a asp-action="EditProject" asp-controller="Project" asp-route-projectID="@p.ProjectID" class="btn-primary" asp-route-date="@DateTime.Today.ToString()">Edit Project</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>






                                    @* End Content *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
    <div class="col-lg-1"></div>
</div>