@model Review
@{
    ViewBag.Title = "Edit Review";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ReviewID" name="ReviewID" value="@ViewBag.ReviewID" />
        <div class="form-group">
            <label asp-for="Subject">Subject:</label>
            <div><span asp-validation-for="Subject" class="text-danger"></span></div>
            <textarea asp-for="Subject" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Body">Body:</label>
            <div><span asp-validation-for="Body" class="text-danger"></span></div>
            <input asp-for="Body" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Approved">Approved?:</label>
            <div><span asp-validation-for="Approved" class="text-danger"></span></div>
            <input asp-for="Approved" id="Checkbox1" type="checkbox" />
           
        </div>
        <div class="text-center">
            <button asp-action="ReviewPanel" asp-controller="Admin" class="btn btn-primary" type="submit">Save</button>
            <a asp-action="ReviewPanel" asp-controller="Admin" class="btn btn-default">Cancel</a>
        </div>
    </form>
</body>
</html>
