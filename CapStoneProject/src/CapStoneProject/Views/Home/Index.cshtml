﻿
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}



    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="index" src="~/images/masterBath.jpg" alt="bathroom remodel">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Remodels</h1>
                        <h3>We focus on kitchen and bath remodels.</h3>
                        <p><a class="btn btn-lg btn-primary" href="@Url.Action("BidRequest", "BidRequest")" role="button">Get a Quote</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="index" src="~/images/craftsmanPorch.jpg" alt="craftsman porch">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Timberframe</h1>
                        <h3>Adding a custom crafted porch really ups the curb appeal.</h3>
                        <p><a class="btn btn-lg btn-primary" href="@Url.Action("Framing", "Gallery")" role="button">See Timberframe</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="index" src="~/images/copperCon.jpg" alt="stained concrete">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Concrete</h1>
                        <h3>Specializing in stained and stamped concrete.</h3>
                        <p><a class="btn btn-lg btn-primary" href="@Url.Action("Index", "Gallery")" role="button">Browse gallery</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<!-- /.carousel -->


    <div class="container mission" id="missionDiv">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8" id="statementDiv">
                <p>
                    Serving Clackamas County residents in all of their remodeling and renovation needs. 
                    We enjoy working with you to plan out a project that fits your financial needs while 
                    also providing the utmost in creative design, quality supplies, and reliable service for your project. 
                    Please use our website to get a free <a asp-action="LoggedInBidRequest" asp-controller="BidRequest">quote</a> so that we can get started on making your dream remodel happen. 
                </p>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>

<script>
  $('.carousel').carousel({
   interval: 8000
  });
</script>  

