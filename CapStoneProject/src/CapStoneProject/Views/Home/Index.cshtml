    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<body>
    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="first-slide" src="~/images/masterBath.jpg" alt="bathroom remodel">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Remodels</h1>
                        <p>Remodels can make a tired space invigorating again.</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Sign up today</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="second-slide" src="~/images/craftsmanPorch.jpg" alt="craftsman porch">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Decorative Wood Framing</h1>
                        <p>Adding a decrotive craftsman proch really ups the curb appeal.</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="third-slide" src="~/images/copperCon.jpg" alt="stained concrete">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Stained and Stamped Concrete</h1>
                        <p>We also specialize in decorative concrete work.</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Browse gallery</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><!-- /.carousel -->

