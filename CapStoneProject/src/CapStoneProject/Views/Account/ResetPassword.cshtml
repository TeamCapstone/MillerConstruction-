@model VMRestPassword

@{
    ViewBag.Title = "Reset Password";
    Layout = "_Layout2";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <img class="login-img" src="~/lib/images/kw-logo.png" />
            <h2>Set New Password:</h2>
            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                <input type="hidden" asp-for="Token" />

                <div class="input-group input-group-lg">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-envelope"></span>
                    </span>
                    <input asp-for="UserName" class="form-control" type="text" placeholder="Email address">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <br />
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                    </span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="New Password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div><br />

                <div class="input-group input-group-lg">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                    </span>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div><br />
                <button type="submit" class="btn btn-danger btn-lg btn-block">Reset Password</button>

            </form>
        </div>
    </div>
</div>