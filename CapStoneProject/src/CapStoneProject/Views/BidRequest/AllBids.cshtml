@model List<Bid>

@{
    Layout = "_Layout2";
}

<div class="">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10 Afilter" id="">
            <h2>Filtered Bids</h2>
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Total Estimate</th>
                    <th class="text-right">Action</th>

                </tr>

                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.BidID</td>
                        @if (b.User.LastName == null)
                        {
                            <td>@b.User.FirstName</td>
                        }
                        else
                        {
                            <td>@b.User.LastName</td>
                        }
                        <td>@b.RevisedProjectDescription</td>
                        <td>@b.TotalEstimate</td>

                        <td>
                            <form asp-action="DeleteBid" method="post" class="">
                                <div class="btn-toolbar">
                                    <input class="" type="hidden" name="BidID" value="@b.BidID" />
                                    <button type="submit" class="btn btn-danger btn-sm pull-right">Delete</button>
                                    <a asp-action="ViewBid" asp-controller="BidRequest" class="btn btn-sm btn-warning pull-right" asp-route-bidId="@b.BidID">View</a>
                                    <a asp-action="CreateProject" asp-controller="Project" class="btn btn-sm btn-primary pull-right" asp-route-bidId="@b.BidID">Create Project</a>

                                </div>
                            </form>
                        </td>
                    </tr>

                }
            </table>
        </div>
        <div class="col-lg-1"></div>
    </div>
</div>