
@model CapStoneProject.Models.BidRequest
@{
    ViewData["Title"] = "Bid Request";
    Layout = "_Layout";
}

<div class="container" id="formDiv">
    <div class="col-lg-2"></div>
    <div class="col-lg-8" >
        <h3>Request a Quote</h3>
        <form asp-controller="BidRequest" asp-action="BidRequest" method="post" class="" id="BRForm">
            <input asp-for="BidRequestID" type="hidden" />

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">   
                        <input class="form-control" type="text" asp-for="User.FirstName" value="" placeholder="First Name:" id="clientNameBR" required>
                        <span asp-validation-for="User.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <input class="form-control" type="text" asp-for="User.LastName" value="" placeholder="Last Name:" id="clientNameBR" required>
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6"></div>
                
                    <br />
                    <div class="col-lg-10">
                        <p>
                            *
                            We ask that you create an account so that you can access your bid at a later date.
                        </p>
                        <p>* Please enter a password with at least 6 characters, including at least one number.</p>

                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <input class="form-control" type="email" asp-for="User.Email" value="" placeholder="Email:" id="clientEmailBR"  required>
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <input class="form-control" type="password" asp-for="User.Password" value="" placeholder="Password:" id="clientEmailBR1"  required>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <input class="form-control" type="password" asp-for="User.Password" value="" placeholder="Retype your passwor:" id="clientEmailBR2"  required>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>
              

                <div class="col-lg-12">
                    <div class="form-group ">
                        <label asp-for="ProjectDescription">Please describe your project:</label><br />
                        <textarea asp-for="ProjectDescription" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <input class="form-control" type="text" asp-for="ProjectLocation" value="" placeholder="City:" id="clientcityBR">
                        <span asp-validation-for="ProjectLocation" class="text-danger"></span>
                    </div>
                   
                </div>
                <div class="col-lg-6"></div>
                <div class="col-lg-12"></div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="NewBuild">NewBulid?<input class="form-control" type="checkbox" asp-for="NewBuild"  id="newbuildBR"></label>
                           
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Remodel">Remodel?<input class="form-control" type="checkbox" asp-for="Remodel" id="remodelBR"></label>
                            
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="FrameWork">Framework?<input class="form-control" type="checkbox" asp-for="FrameWork" id="frameworkBR"></label>
                            
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Concrete">Concrete?<input class="form-control" type="checkbox" asp-for="Concrete" id="concreteBR"></label>
                            
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">

                    <div class="text-center">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4"></div>
            </div>

        </form>
    </div>
    <div class="col-lg-2"></div>
</div>



