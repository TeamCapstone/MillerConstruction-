@model List<BidRequest>

@{
    Layout = "_Layout";
}


<div class="container" id="formDiv">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <h2>All Current Quote Requests</h2>
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Action</th>

                </tr>
               
                @foreach (var v in Model)
                {
                    <tr>
                        <td>@v.BidRequestID</td>
                        @if (v.User.LastName == null)
                        {
                            <td>@v.User.FirstName</td>
                        }
                        else
                        {
                            <td>@v.User.LastName</td>
                        }
                        <td>@v.ProjectDescription</td>
                        <td>@v.ProjectLocation</td>
                        <td>
                            <form asp-action="Delete" method="post" class="">
                                <div class="btn-toolbar">
                                    <button type="submit" class="btn btn-warning btn-sm pull-right">Delete</button>
                                    @*<a href="@Url.Action("Bid", "BidRequest", new { id = v.BidRequestID })" class="btn btn-sm btn-primary pull-right">Respond</a>*@
                                    <a asp-action="Bid" asp-controller="BidRequest" class="btn btn-sm btn-primary pull-right" asp-route-bidrequestId="@v.BidRequestID">Respond</a>
                                    <input class="" type="hidden" name="BidRequestID" value="@v.BidRequestID" />
                                </div>
                            </form>
                        </td>
                    </tr>

                }
            </table>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>