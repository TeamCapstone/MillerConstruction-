@* user default panel *@

@model IEnumerable<UserIdentity>

<div id="modal-container" class="modal fade hidden-print" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <a data-toggle="collapse" href="#collapse7" id="parTitle">All Current Users</a>
                    </h3>
                </div>
                <div id="collapse7" class="panel-collapse collapse">
                    @* Start Content *@

                    <div class="container" id="formDiv">
                        <div class="row">
                            <br />
                            <br />
                            <form asp-controller="User" asp-action="FilterUsers" class="pull-right">
                                <p>
                                    <input type="text" name="SearchString">
                                    <input type="submit" value="Filter" />
                                </p>
                            </form>
                            @*<h4>Create a New Client <a class="btn btn-primary" asp-action="Create">Create</a> </h4>*@
                            <table class="table table-striped table-bordered table-condensed">
                                <tr><th colspan="6">Email</th><th>Name</th><th colspan="3" class="text-right">Create Client</th></tr>
                                @if (Model.Count() == 0)
                                {
                                    <tr><td colspan="3" class="text-center">No Users</td></tr>
                                }
                                else
                                {
                                    foreach (UserIdentity u in Model)
                                    {
                                        <tr>
                                            <td colspan="6">@u.Email</td>    
                                            <td>@u.LastName</td>
                                            <td>
                                                @if (u.ClientCreated == false)
                                                {
                                                <a class="btn btn-sm btn-primary pull-right" colspan="3" asp-controller="Client" asp-action="AdminCreateClient"
                                                   asp-route-email=@u.Email>Create</a>
                                                }
                                            </td>
                                                                                  
                                        </tr>
                                    }
                                }
                            </table>

                        </div>
                    </div>

                    @* End Content *@
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-1"></div>
</div>
