@model IEnumerable<Review>
@{
    ViewBag.Title = "All Reviews";
    Layout = "_Layout2";
}

<div class="container" id="formDiv">
    <div class="row">
        
        <div class="col-lg-12">
            <h2>Review Panel</h2>
            <br />
            <form asp-controller="Admin" asp-action="ReviewPanel" class="pull-right">
                <p>
                    <input type="text" name="SearchString">
                    <input type="submit" value="Filter" />
                </p>
            </form>

            <br />
            <table class="table table-striped table-bordered table-condensed">
                <tr class="info">
                    <th >ReviewID</th>
                    <th >Review Name</th>
                    <th>Subject</th>
                    <th>Body</th>
                    <th>Approved?</th>
                    <th >Date</th>
                    <th class="text-right">Actions</th>
                </tr>
                @foreach (var review in Model)
                {
                    <tr class="danger">
                        <td >@review.ReviewID</td>
                        <td>@review.From.FirstName</td>
                        <td>@review.Subject</td>
                        <td>@review.Body</td>
                        <td >@review.Approved</td>
                        @if (review.Date == null)
                {
                    review.Date = DateTime.Now;
                            <td >@review.Date.ToString("d")</td>
                        }
                        else
                        {

                            <td >@review.Date.ToString("d")</td>
                        }
                        <td >

                            <form asp-action="DeleteReview" method="post">
                                <div class="btn-toolbar">
                                    
                                    <a asp-action="EditReview" asp-controller="Admin" class="btn btn-sm btn-primary"
                                       asp-route-ReviewID="@review.ReviewID">
                                        Approve
                                    </a>
                                    <span class="btn btn-sm btn-warning">
                                        @Html.ActionLink("Comment", "Comment", "Review",
                                        new { subject = @review.Subject, Id = @review.ReviewID, body = @review.Body }, new { @style = "color:aliceblue;" })
                                    </span>
                                    <input type="hidden" name="ReviewID" value="@review.ReviewID" />
                                    <button type="submit" class="btn btn-danger btn-sm ">
                                        Delete
                                    </button>
                                    
                                </div>

                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
        
    </div>
</div>
