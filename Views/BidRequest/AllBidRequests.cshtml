@model List<BidRequest>

@{
    Layout = "_Layout2";
}
@* This is now a view component (BidRequestVC) but keeping just in case *@

<div class="container" id="formDiv">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <h2>All Current Quote Requests</h2>
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th class="text-right">Action</th>

                </tr>
               
                @foreach (var br in Model)
                {
                    <tr>
                        <td>@br.BidRequestID</td>
                        @if (br.User.LastName == null)
                        {
                            <td>@br.User.FirstName</td>
                        }
                        else
                        {
                            <td>@br.User.LastName</td>
                        }
                        <td>@br.ProjectDescription</td>
                        <td>@br.ProjectLocation</td>
                        <td>
                            <form asp-action="DeleteBidReq" method="post" class="">
                                <div class="btn-toolbar">
                                    <button type="submit" class="btn btn-warning btn-sm pull-right">Delete</button>                                
                                    <a asp-action="Bid" asp-controller="BidRequest" class="btn btn-sm btn-primary pull-right" asp-route-bidrequestId="@br.BidRequestID">Respond</a>
                                    <input class="" type="hidden" name="BidRequestID" value="@br.BidRequestID" />
                                </div>
                            </form>
                        </td>
                    </tr>

                }
            </table>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>